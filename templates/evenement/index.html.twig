{% extends 'base.html.twig' %}

{% block title %}Liste des événements{% endblock %}

{% block body %}
<h4>Liste des événements</h4>
<a class="texte-utilisateur" href=" {{ path('new_evenement') }} ">Créer un événement</a>

{% for evenement in evenements %}
    <div class="ligne">
        <a class="texte-utilisateur" href=" {{ path('show_evenement', {'id': evenement.id}) }} ">{{ evenement }}</a>
        <a class="btn-editer" href="{{ path('edit_evenement', {'id': evenement.id}) }}">Éditer</a>
        <a class="btn-supprimer" href="{{ path('suppr_evenement', {'id': evenement.id}) }}">Supprimer</a>
    </div>
{% endfor %}

{% endblock %}
